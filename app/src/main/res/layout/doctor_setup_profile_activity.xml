<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/bluelight"
        android:layout_height="match_parent">

<android.support.v7.widget.CardView
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="20dp"
    android:elevation="20dp">
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/logo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Spinner

                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/spinnerid1"
                    android:background="@color/my_spinner_text_color"
                    android:entries="@array/salutation"

                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/setupfirstname"
                    android:layout_width="166dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="4dp"
                    android:textColor="#000"
                    android:background="@drawable/style"
                    android:hint="First Name"
                    android:padding="15dp"
                    android:enabled="false"
                    android:textColorHint="#000"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/setuplastname"
                    android:layout_width="166dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/style"
                    android:enabled="false"
                    android:hint="Last Name"
                    android:padding="15dp"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="15sp" />

            </LinearLayout>


        </LinearLayout>
</android.support.v7.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTACT INFORMATION:"
            android:textColor="#fff"
            android:textSize="25sp"

            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

<android.support.v7.widget.CardView
    android:layout_width="340dp"
    android:layout_gravity="center"
    android:elevation="20dp"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="8dp"
    android:layout_height="120dp">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="#000"
                android:textSize="20sp"
               />

            <EditText
                android:id="@+id/setupemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/style"
                android:enabled="false"
                android:hint="Your E-mail"
                android:textColor="#000"
                android:padding="15dp"

                android:textColorHint="#000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile:"
                android:textColor="#000"
                android:textSize="20sp"
               />

            <EditText
                android:id="@+id/setupmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/style"
                android:enabled="false"
                android:hint="Your Mbbile Number"
                android:padding="15dp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20sp" />
        </LinearLayout>





</android.support.v7.widget.CardView>



        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENRAL INFORMATION:"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_gravity="center"/>






<android.support.v7.widget.CardView
    android:layout_width="340dp"
    android:layout_height="160dp"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    android:elevation="20dp">

        <LinearLayout
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >


            <Spinner

                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/setupidentityproof"
                android:background="@color/white"

                android:entries="@array/identity_proof_entries"

                android:layout_marginLeft="4dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <EditText
                android:id="@+id/enteridenetitynumID"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Identity Num"
                android:textColorHint="#000"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"

                android:layout_gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualification:"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginLeft="25dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/enterqualificationID"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:textAlignment="center"
                android:background="@drawable/style"

                android:hint="Enter Qualification"
                android:padding="10dp"

                android:textColorHint="#000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultation Time:"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/consultationtimeID"
                android:layout_width="190dp"
                android:layout_height="wrap_content"

                android:background="@drawable/style"
               android:gravity="center"
                android:hint="time in minutes"
                android:padding="10dp"

                android:textColorHint="#000"
                android:textSize="20sp" />
        </LinearLayout>
</android.support.v7.widget.CardView>



            <Button
                android:id="@+id/submitprofileDoctorID"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonstyle"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:text="UPDATE Information"
                android:textSize="15sp"
                android:textAllCaps="false" />

    </LinearLayout>


