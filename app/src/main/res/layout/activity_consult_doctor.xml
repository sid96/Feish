<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="instatag.com.b3ds.ConsultDoctorActivity"
    android:background="@color/white">

<LinearLayout
    android:background="#0084ff"
    android:orientation="vertical"
    android:layout_gravity="center"

    android:layout_width="304dp"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content">

    <TextView

        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Doctor:"
       android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_gravity="center"/>

    <EditText
        android:layout_marginTop="26dp"
        android:textColorHint="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/searchdoctorID"

        android:hint="Enter Name/Addres/Lab Name"/>


    <EditText
        android:layout_marginTop="5dp"
        android:textColorHint="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/searchaddressId"
        android:hint="Enter Your Address" />
</LinearLayout>

<LinearLayout
    android:background="#0084ff"
    android:layout_marginTop="15dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="316dp"
    android:layout_height="wrap_content">
    <TextView

        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Plan:"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_gravity="center"/>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical">



        <RadioGroup
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:id="@+id/genderID"
            android:layout_width="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_height="wrap_content">



            <RadioButton
                android:id="@+id/freeplanID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FREE"

                android:textSize="20sp"
                android:checked="true" />

            <RadioButton
                android:textSize="20sp"
                android:id="@+id/purchaseplanID"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAID" />

        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <TextView

            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select SPECIALISTS:"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:background="@drawable/buttonstyle2"
            android:textSize="15sp"
            />

        <Spinner

            android:layout_width="120dp"
            android:layout_height="30dp"

            android:id="@+id/specialistID"

            android:entries="@array/doctorspecialist"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:background="#0084ff"
        android:orientation="vertical"
        android:layout_gravity="center"

        android:layout_width="304dp"
        android:layout_marginTop="20dp"
        android:layout_height="140dp">

    <TextView

        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textStyle="bold"
        android:id="@+id/submitDetailsId"
       android:background="@drawable/buttonstyle"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textSize="18sp"
        />

    <LinearLayout android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dashboardbtnid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="HOME"
            android:textStyle="bold|italic"
            android:textSize="16sp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/buttonstyle"/>

        <Button

            android:id="@+id/bookapointmentID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BookAppointment"
            android:textStyle="bold|italic"
            android:layout_marginBottom="10dp"
            android:textColor="#000"
            android:textSize="16sp"
     android:layout_marginLeft="20dp"
            android:background="@drawable/buttonstyle"/>


</LinearLayout>
        </LinearLayout>
    </LinearLayout>



